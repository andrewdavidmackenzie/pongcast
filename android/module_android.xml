    <pathelement location="${mediarouter.output.dir}"/>
    <pathelement location="${basedir}/../../../Users/andrew/android-sdk-mac_x86/extras/android/support/v7/mediarouter/libs/android-support-v7-mediarouter.jar"/>
    <pathelement location="${castcompanionlibrary.output.dir}"/>
  </path>
  
  <path id="android.module.classpath">
    <path refid="${module.jdk.classpath.android}"/>
    <pathelement location="${android.output.dir}"/>
    <pathelement location="${appcompat.testoutput.dir}"/>
    <pathelement location="${appcompat.output.dir}"/>
    <pathelement location="${basedir}/../../../Users/andrew/android-sdk-mac_x86/extras/android/support/v7/appcompat/libs/android-support-v7-appcompat.jar"/>
    <pathelement location="${basedir}/../../../Users/andrew/android-sdk-mac_x86/extras/android/support/v4/android-support-v4.jar"/>
    <pathelement location="${google-play-services_lib.testoutput.dir}"/>
